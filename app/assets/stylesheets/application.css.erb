body {
	font-family: "HelveticaNeueBold", "HelveticaNeue-Bold", "Helvetica Neue Bold", "HelveticaNeue", "Helvetica Neue", 'TeXGyreHerosBold', "Helvetica", "Tahoma", "Geneva", "Arial", sans-serif; font-weight:600; font-stretch:normal;
	-webkit-font-smoothing: antialiased;
	padding: 50px;
}

ul {
	padding: 0;
	margin: 0;
	list-style: none;
}

a {
	text-decoration: none;
	color: black;
	transition: color 1s;
	outline: 0;
}

a:visited {
	color: black;
}

a:hover {
	color: rgb(253, 120, 8);
}

h1, h2 {
	padding: 0;
	margin: 0;
}

.title {
	font-size: 120px;
}

.sub-title {
	font-size: 60px;
}

.navigation,
.extras {
	font-size: 60px;
	padding: 20px 0 20px 0;
}

.navigation {
	padding-top: 60px;
}

.extras {
	border-top: 5px black solid;
	display: inline-block;
}

#witchifier-input {
	border: none;
	resize: none;
	width: 100%;
	padding: 0;
	font-size: 120px;
	outline: 0;
	min-height: 300px;
}


html, body{
	margin: 0;
	padding: 0;
	width: 100%;
	font-family: 'Varela', sans-serif;
	color: #F0F0F0;
	height: 100%;
}

body{
	background-image: url(<%= asset_path 'bg.png' %>);
	background-color: rgb(47, 48, 52);
	overflow: hidden;
}

.navigation, .content{
	display: inline-block;
	height: 100%;
}

.content{
	width: 824px;
}

.navigation{
	-webkit-box-shadow: inset -2px 0 5px black;
/*	-webkit-box-shadow: 2px 0 7px black;*/
	background: #1485B4;
	width: 200px;
}

.navigation .app-title{
	font-family: 'Lobster', cursive;
	font-size: 2.5em;
	text-shadow: rgba(0, 0, 0, 0.4) -1px 0, rgba(0, 0, 0, 0.6) 0 -1px, rgba(255, 255, 255, 0.2) 0 1px, rgba(0, 0, 0, 0.4) 0 -1px;
	text-align: center;
}

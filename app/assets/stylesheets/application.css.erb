* {
	box-sizing: border-box;
}

html, body {
	width: 100%;
	min-height: 100%;
	padding: 0;
	margin: 0;
}

body {
	font-family: 'UnifrakturCook', cursive;
	font-size: 100%;
	letter-spacing: 10px;
	text-rendering: optimizeLegibility;
	color: white;
	background-color: blue;
	padding: 3.5% 5%;
	position: relative;
	-webkit-transform: scale(1, 1.6);
	-moz-transform: scale(1, 1.6);
	-ms-transform: scale(1, 1.6);
	-o-transform: scale(1, 1.6);
	transform: scale(1, 1.6);
	-webkit-transform-origin: 0 0;
	-moz-transform-origin: 0 0;
	-ms-transform-origin: 0 0;
	-o-transform-origin: 0 0;
	transform-origin: 0 0;
}

body:after {
	width: 100%;
  height: 100%;
  content: "";
  opacity: 0.5;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;
  background: url(/assets/bust.jpg) no-repeat; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  background-position: center center;
}

a, 
a:visited {
	color: white;
}

ul {
	list-style: none;
	margin: 0;
	padding: 0;
}

#content {
	text-align: center;
	border: 60px solid white;
	border-top-width: 40px;
	border-bottom-width: 40px;
	height: 100%;
	min-height: 100%;
	padding: 1.5% 3%;
	word-break: break-word;
	position: relative;
	overflow: hidden;
}

#title {
	text-decoration: underline;
	letter-spacing: 20px;
	font-size: 750%;
	margin: 0;
	margin-bottom: 60px;
}

.navigation {
	font-size: 200%;
}

.navigation li {
	display: inline-block;
	margin: 30px 60px 30px 60px;
}

.wiggle {
	display: none;
	line-height: 100%;
	font-size: 1000%;
	display: inline-block;
	display: none;
	letter-spacing: 0;
	position: absolute;
	margin: auto;
	color: red;
	z-index: -1;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
	height: 1em;
	-webkit-transform:rotate(-30deg) scale(1.6, 1);
	-moz-transform:rotate(-30deg) scale(1.6, 1);
	-ms-transform:rotate(-30deg) scale(1.6, 1);
	-o-transform:rotate(-30deg) scale(1.6, 1);
	transform:rotate(-30deg) scale(1.6, 1);
}

@media screen and (max-width: 1024px) {
	#content {
		border: 40px solid white;
		border-top-width: 27px;
		border-bottom-width: 27px;
	}

	#title {
		font-size: 500%;		
	}

	.navigation {
		font-size: 200%;
	}
}

@media screen and (max-width: 860px) {
	.wiggle {
		-webkit-transform:rotate(90deg) scale(1.6, 1);
		-moz-transform:rotate(90deg) scale(1.6, 1);
		-ms-transform:rotate(90deg) scale(1.6, 1);
		-o-transform:rotate(90deg) scale(1.6, 1);
		transform:rotate(90deg) scale(1.6, 1);
		line-height: 0;
		height: 0;		
	}
}

@media screen and (max-width: 640px) {

	#content {
		border: none;
		padding: 0;
	}

	#title {
		font-size: 200%;
	}

	.navigation {
		font-size: 200%;
	}
}




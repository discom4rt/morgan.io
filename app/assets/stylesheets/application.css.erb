::selection {
  background: yellow;
  color: red;
  text-shadow: none;
}

::-moz-selection {
  background: yellow;
  color: red;
  text-shadow: none;
}

* {
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1,
h2,
h3 {
  margin: 36px 0 0 0;
  letter-spacing: -0.03em;
}

h1 {
  font-size: 4em;
  font-weight: normal;
  margin: 18px 0 0 0;
  line-height: 0.8em;
}

h2 {
  font-size: 3em;
  font-weight: normal;
}

h3 {
  font-size: 2.34em;
  font-weight: normal;
}

p {
  margin: 18px 0 18px 0;
}

a,
a:visited {
  text-decoration: none;
  color: white;
}

a:hover {
  font-style: italic;
}

a:focus {
  outline: none;
  font-style: italic;
}

ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

html, body {
	padding: 0;
	margin: 0;
}

body {
	text-rendering: optimizeLegibility;
	-webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-overflow-scrolling: touch;
  font-family: 'Times New Roman', serif;
  background-color: black;
  color: white;
  font-size: 200%;
  text-align: center;
  cursor: default;
  text-shadow:
   -1px -1px 0 #000,
    1px -1px 0 #000,
    -1px 1px 0 #000,
     1px 1px 0 #000;
}

.content {
  max-width: 480px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  margin-bottom: 36px;
}

.mood-setter {
  position: absolute;
  max-width: 40%;
  height: auto;
  top: 0;
  left: 0;
  visibility: hidden;
}

@media (max-width: 480px) {
  body {
    font-size: 150%;
  }

  .mood-setter {
    max-width: 60%;
  }
}

.hell-to-the-no {
  display: inline-block;
  position: relative;
}

.hell-to-the-no:after {
  content: "naw";
  display: inline-block;
  width: 100%;
  height: 2px;
  background-color: red;
  position: absolute;
  left: 0;
  top: calc(50%);
  border: 1px solid black;
  font-size: 18px;
  -ms-transform: rotate(-10deg);
  -webkit-transform: rotate(-10deg);
  transform: rotate(-10deg);
  color: red;
}



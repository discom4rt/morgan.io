html, body {
	background-color: #FAFAFA;
	color: #050505;
}

body {
	font-family: "HelveticaNeueBold", "HelveticaNeue-Bold", "Helvetica Neue Bold", "HelveticaNeue", "Helvetica Neue", 'TeXGyreHerosBold', "Helvetica", "Tahoma", "Geneva", "Arial", sans-serif;
	font-weight:600;
	font-stretch:normal;
	padding: 20px 40px 40px 40px;
	letter-spacing: -1px;
	font-weight: bold;
}

ul {
	padding: 0;
	margin: 0;
	list-style: none;
}

a {
	text-decoration: none;
	color: #050505;
	transition: color 1s;
	outline: 0;
}

a:visited {
	color: #050505;
}

a:hover {
	color: #0000FF;
}

h1, h2 {
	padding: 0;
	margin: 0;
}

.title {
	font-size: 120px;
	line-height: 1em;
}

.sub-title {
	font-size: 60px;
	padding-bottom: 60px;
}

.navigation {
	font-size: 120px;
	padding: 0 0 24px 0;
}

.navigation li {
	line-height: 1em;
}

.navigation .extra {
	margin-top: 22px;
	padding-top: 20px;
	border-top: 16px black solid;
	display: inline-block;
}

.inline.navigation {
	font-size: 14px;
	padding-bottom: 20px;
	letter-spacing: normal;
}

.inline.navigation li {
	padding-right: 20px;
	display: inline-block;
	line-height: normal;
}

.inline.navigation .extra {
	border-left: 2px solid black;
	padding-left: 20px;
	margin-top: 0;
	padding-top: 0;
	border-top: none;
}

.inline.navigation .active a {
	color: #0000FF;
}

#witchifier-input {
	border: none;
	resize: none;
	width: 100%;
	padding: 0 0 10px 0;
	font-size: 120px;
	outline: 0;
	min-height: 300px;
	line-height: 150px;
	background-color: inherit;
	color: #050505;
}


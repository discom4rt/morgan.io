::selection {
  background: black;
  color: white;
}

::-moz-selection {
  background: black;
  color: white;
}

* {
	box-sizing: border-box;
}

html, body {
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
}

body {
	color: black;
	background: white;
	text-transform: uppercase;
	text-rendering: optimizeLegibility;
	font-size: 50%;
	font-family: 'Krona One', sans-serif;
	display: table;
	letter-spacing: 2px;
	-webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

ul {
	margin: 0;
	padding: 0;
	list-style-type: none;
}

a, a:visited {
	text-decoration: none;	
	color: inherit;	
}

.navigation a:hover {
	padding: 5px 5px 5px 7px;
}

.navigation.right a:hover {
	color: white;
	background-color: black;
}

.navigation.left a:hover {
	color: black;
	background-color: white;
}

.content-left,
.content-right {
	display: table-cell; 
	text-align: center;
	width: 50%;
	vertical-align: middle;
	transition: background-color 5s linear, color 5s linear;
}

.content-left {
	color: white;
	background-color: black;
}

.content-right {
	color: black;
} 

.navigation li:first-child {
	margin-top: 20px;
}

.navigation li {
	margin-bottom: 20px;
}




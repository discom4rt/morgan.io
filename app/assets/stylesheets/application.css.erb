::selection {
  background: yellow;
  color: red;
  text-shadow: none;
}

::-moz-selection {
  background: yellow;
  color: red;
  text-shadow: none;
}

* {
  box-sizing: border-box;
}

h1,
h2,
h3 {
  margin: 36px 0 0 0;
  letter-spacing: -0.03em;
}

h1 {
  font-size: 1.75rem;
  font-weight: normal;
  margin: 18px 0 0 0;
}

h2 {
  font-size: 1.75rem;
  font-weight: normal;
}

h3 {
  font-size: 1.5rem;
  font-weight: normal;
}

p {
  margin: 18px 0 18px 0;
}

a,
a:visited {
  text-decoration: none;
  color: white;
}

a:hover {
  font-style: italic;
}

a:focus {
  outline: none;
  font-style: italic;
}

ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

html, body {
	padding: 0;
	margin: 0;
}

html {
  background-color: white;
  font-size: 32px;
}

body {
	text-rendering: optimizeLegibility;
	-webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-overflow-scrolling: touch;
  font-family: 'Times New Roman', serif;
  background-color: transparent;
  color: white;
  text-align: center;
  cursor: default;
  text-shadow:
  -2px -2px 0 #000,
   2px -2px 0 #0000ff,
  -2px 2px 0 #ff0000,
   2px 2px 0 #00ff00;
}

a {
  -webkit-transition: text-shadow 250ms ease;
  transition: text-shadow 250ms ease;
  text-shadow:
  -2px -2px 0 #000,
   2px -2px 0 #0000ff,
  -2px 2px 0 #ff0000,
   2px 2px 0 #00ff00;
}

a:hover {
  text-shadow:
   2px 2px 0 #000,
  -2px 2px 0 #0000ff,
   2px -2px 0 #ff0000,
  -2px -2px 0 #00ff00;
}

.content {
  max-width: 480px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  margin-bottom: 36px;
}

.mood-setter {
  position: absolute;
  max-width: 40%;
  height: auto;
  top: 0;
  left: 0;
  visibility: hidden;
 -moz-user-select: none;
 -khtml-user-select: none;
 -webkit-user-select: none;
 -ms-user-select: none;
 user-select: none;
}

@media (max-width: 480px) {
  html {
    font-size: 28px;
  }

  h1,
  h2,
  h3 {
    font-size: 1.5rem;
  }

  .mood-setter {
    max-width: 60%;
  }
}

.hell-to-the-no {
  display: inline-block;
  position: relative;
}

.hell-to-the-no:after {
  content: "naw";
  display: inline-block;
  width: 100%;
  height: 2px;
  background-color: red;
  position: absolute;
  left: 0;
  top: calc(50%);
  border: 1px solid black;
  font-size: 18px;
  -ms-transform: rotate(-10deg);
  -webkit-transform: rotate(-10deg);
  transform: rotate(-10deg);
  color: red;
}

.pixelated {
  image-rendering: optimizeSpeed;
  image-rendering: -moz-crisp-edges;
  image-rendering: -webkit-optimize-contrast;
  image-rendering: -o-crisp-edges;
  image-rendering: crisp-edges;
  -ms-interpolation-mode: nearest-neighbor;
}


